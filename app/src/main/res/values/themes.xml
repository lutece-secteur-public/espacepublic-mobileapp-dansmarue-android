<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.Starting" parent="Theme.SplashScreen">
        <!-- Set the splash screen background, animated icon, and animation duration. -->
        <item name="windowSplashScreenBackground">@drawable/splashscreen_vf</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <!-- <item name="windowSplashScreenIconBackgroundColor">@color/pink</item>-->
        <item name="android:windowFullscreen">true</item>
        <item name="windowSplashScreenAnimationDuration">200</item>
        <item name="postSplashScreenTheme">@style/AppTheme</item>
    </style>

    <style name="Theme.SplashScreen" parent="AppTheme" />
</resources>