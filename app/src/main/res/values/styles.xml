<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/pink</item>
        <item name="colorPrimaryDark">@color/bordeaux</item>
        <item name="colorAccent">@color/pink</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textViewStyle">@style/TextViewCustomFont</item>
    </style>

    <!--Default font-->
    <style name="TextViewCustomFont">
        <item name="fontPath">fonts/Montserrat-Regular.otf</item>
    </style>

    <style name="ThemeNoTopBarDroid" parent="AppTheme">
        <!--<item name="android:windowBackground">@null</item>-->
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
        <item name="android:homeAsUpIndicator">@drawable/ic_arrow_back_white_24px</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="LoginTheme" parent="AppTheme">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="android:windowTranslucentStatus">true</item>

    </style>

    <style name="ThemeForToolBar" parent="AppTheme">
        <item name="colorPrimary">@color/pink</item>
        <item name="colorPrimaryDark">@color/bordeaux</item>
    </style>

    <style name="TransparentStatus" parent="AppTheme">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="Autocomplete" parent="Widget.AppCompat.Light.AutoCompleteTextView">
        <item name="android:background">@color/colorWhite</item>
        <item name="colorControlNormal">@color/colorBlueGrey200</item>
        <item name="colorControlActivated">@color/colorBlueGrey200</item>
    </style>

    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!--butttons-->
        <item name="colorAccent">@color/bordeaux</item>
        <!--text-->
        <item name="android:textColorPrimary">@color/black</item>
        <!--background-->
        <item name="android:background">@color/white</item>
    </style>

    <style name="ActiveItemBottomNavigation" parent="Widget.Design.BottomNavigationView">
        <item name="android:textColor">@color/bordeaux</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/bottom_border</item>
    </style>

</resources>
